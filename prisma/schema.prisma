generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GranthaDeck {
  grantha_deck_id        String      @id
  grantha_deck_name      String?
  grantha_owner_name     String?
  grantha_source_address String?
  length_in_cms          Float?
  width_in_cms           Float?
  total_leaves           Int?
  total_images           Int?
  stitch_or_nonstitch    String?
  physical_condition     String?
  granthas               Grantha[]
  user_id                String
  user                   UserAccount @relation(fields: [user_id], references: [user_id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Language {
  language_id   String    @id @default(uuid())
  language_name String?
  granthas      Grantha[]
}

model Author {
  author_id   String    @id @default(uuid())
  author_name String?
  birth_year  String?
  death_year  String?
  bio         String?
  scribe_name String?
  granthas    Grantha[]
}

model Grantha {
  grantha_id      String         @id // default ids are not required here
  grantha_deck_id String
  grantha_name    String?
  language_id     String
  author_id       String
  description     String?
  remarks         String?
  granthaDeck     GranthaDeck    @relation(fields: [grantha_deck_id], references: [grantha_deck_id], onDelete: Cascade)
  language        Language       @relation(fields: [language_id], references: [language_id], onDelete: Cascade)
  author          Author         @relation(fields: [author_id], references: [author_id], onDelete: Cascade)
  scannedImages   ScannedImage[]
}

enum UserStatus {
  ACTIVE
  BLOCKED
  SUSPENDED
}

model UserAccount {
  user_id                   String          @id @default(uuid())
  user_name                 String          @unique
  email                     String          @unique
  password                  String
  role                      String
  phone_no                  String?
  address                   String?
  accessControls            AccessControl[]
  forgotPasswordToken       String?
  forgotPasswordTokenExpiry DateTime?
  status                    UserStatus      @default(ACTIVE) @map("status")
  GranthaDeck               GranthaDeck[]

  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

model AccessControl {
  access_id        String      @id @default(uuid())
  user_id          String
  permission_level String?
  userAccount      UserAccount @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
}

model ScannedImage {
  image_id           String              @id @default(uuid())
  image_name         String
  image_url          String
  grantha_id         String
  grantha            Grantha             @relation(fields: [grantha_id], references: [grantha_id], onDelete: Cascade)
  scanningProperties ScanningProperties?
}

model ScanningProperties {
  scan_id                      String       @id @default(uuid())
  image_id                     String       @unique
  worked_by                    String?
  file_format                  String
  scanner_model                String
  resolution_dpi               String
  lighting_conditions          String?
  color_depth                  String?
  scanning_start_date          String?
  scanning_completed_date      String?
  post_scanning_completed_date String?
  horizontal_or_vertical_scan  String?
  scannedImage                 ScannedImage @relation(fields: [image_id], references: [image_id], onDelete: Cascade)
}

// This table is just used for storing names of scanner models
model ScannerModel {
  id   String @id @default(uuid())
  name String
}
